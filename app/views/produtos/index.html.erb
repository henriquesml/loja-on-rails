<% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
        <%= flash[:notice] %>
    </div>
<% end %>

<table class="table table-bordered table-hover" >
    <thead>
        <tr>
            <td>Nome</td>
            <td>Descrição</td>
            <td>Departamento</td>
            <td>Preço</td>
            <td>Quantidade</td>
            <td colspan="1">
        </tr>
    </thead>
    <tbody>
    <% @produtos.each do |produto| %>
        <tr>
            <td><%= produto.nome %></td>
            <td><%= produto.descricao %></td>
            <td><%= produto.departamento.nome %></td>
            <td><%= produto.preco %></td>
            <td><%= produto.quantidade %></td>
           
             <td class="btn-alt-rem">       
                <%= link_to content_tag(:i,nil, class: 'fa fa-pencil '), edit_produto_path(produto), class: "btn btn-default" %>   
                <%= link_to content_tag(:i,nil, class: 'fa fa-trash icon'), produto, method: :delete, class: "btn btn-danger", data: { confirm: "Deseja remover o produto #{produto.nome}?"} %>   
            </td>
        </tr>
    <% end %>
    </tbody>
</table>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Produto com menor preço</h4>
    </div>
</div>

